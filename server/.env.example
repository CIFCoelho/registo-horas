# Notion Integration Token
NOTION_TOKEN=ntn_your_token_here

# Database IDs (32-character hex strings from Notion database URLs)
ACABAMENTO_DB_ID=your_acabamento_db_id_here
ESTOFAGEM_TEMPO_DB_ID=your_estofagem_tempo_db_id_here
ESTOFAGEM_ACABAMENTOS_DB_ID=your_estofagem_acabamentos_db_id_here

# Optional: Other sections (remove comment to enable)
# COSTURA_DB_ID=your_costura_db_id_here
# PINTURA_DB_ID=your_pintura_db_id_here
# PREPARACAO_MADEIRAS_DB_ID=your_preparacao_madeiras_db_id_here
# MONTAGEM_DB_ID=your_montagem_db_id_here

# Optional: Custom property names for Pintura section
# PINTURA_ISOLANTE_PROP=Isolante Aplicado
# PINTURA_TAPA_PROP=Tapa-Poros
# PINTURA_VERNIZ_PROP=Verniz Aplicado
# PINTURA_AQUEC_PROP=Utilização do Aquecimento

# Optional: Custom property names for Estofagem - Registos Acab.
# ESTOFAGEM_REGISTOS_TITLE_PROP=Funcionário
# ESTOFAGEM_REGISTOS_DATA_PROP=Data
# ESTOFAGEM_REGISTOS_OF_PROP=Ordem de Fabrico
# ESTOFAGEM_REGISTOS_CRU_PROP=Cru:
# ESTOFAGEM_REGISTOS_TP_PROP=TP:

# CORS Configuration (domains allowed to access API)
# Default: https://cifcoelho.github.io
# Multiple origins: separate with commas (no spaces)
ALLOW_ORIGIN=https://cifcoelho.github.io

# Keep-alive settings (prevents Render cold starts)
KEEPALIVE_ENABLED=true
KEEPALIVE_URL=https://your-app-name.onrender.com/health

# Server port (Render overrides this automatically)
PORT=8787

# Timezone (forced to Europe/Lisbon in code)
TZ=Europe/Lisbon
